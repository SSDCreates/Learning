body
  height 100%
  width 100%
  background url("http://source.unsplash.com/Olki5QpHxts") 
  background-size cover
  background-position center
  background-attachment fixed  
  background-repeat no-repeat
.wrapper
  position absolute
  top 40%
  left 35%
  right 35%
  display flex
  flex-flow: column wrap
  align-items center
  justify-content center
  font-family "Lora", 'Times New Roman', Times, serif
  h1
    color white
    text-shadow 2px -2px 2px #111111
    font-size 1.9rem
    font-weight 700
    line-height 1.8
  button
    border-radius 15 px
    background #53ce46
    width 240px
    height 80px
    a
      font-family Lora
      text-decoration none
      font-weight 700
      color black




